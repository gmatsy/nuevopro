<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>controlador.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerRegistro</servlet-name>
        <servlet-class>controlador.ControllerRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>controlador.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarController</servlet-name>
        <servlet-class>controlador.BuscarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoController</servlet-name>
        <servlet-class>controlador.ProductoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/controllerlogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerRegistro</servlet-name>
        <url-pattern>/controllerregistro.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/usuariocontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarController</servlet-name>
        <url-pattern>/buscarcontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoController</servlet-name>
        <url-pattern>/ProductoController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
